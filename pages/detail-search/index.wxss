page{
  padding: 0 20rpx; 
  background-color: #f7f7f7;
  /* padding-top: 80rpx; */
}
.van-search{
  /* position: fixed;
  width: 100%;
  top: 0;
  left: 0; */
  height: 80rpx !important;
}
/* 热门搜索 */
.hot{
  padding: 10rpx;
}
.hot .list{
  display: flex;
  flex-wrap: wrap;
}

.hot .tag{
  font-size: 26rpx;
  letter-spacing: 4rpx;
  background-color: #fff;
  padding: 10rpx 12rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}

.hot .tag:first-of-type{
  color:#26ce8a
}

/* 建议搜索 */

.suggest{
  padding: 10rpx;
}

.suggest .title{
  color: #26ce8a;
  font-size: 34rpx;
  font-weight: 700;
}

.suggest .item{
  display: flex;
  align-items: center;
  margin-top: 16rpx;
}

.suggest .item .icon{
  width: 66rpx;
  margin-left: -20rpx;
}

.suggest .item .text{
  font-size: 28rpx;
}

/* 搜索结果 */
.result .title {
  font-size: 32rpx;
  color: #26ce8a;
}